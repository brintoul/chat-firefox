{
  "icons": {
    "32": "icon-32.png",
    "128": "icon.png"
  },
  "manifest_version": 2,
  "name": "ChatGPT everywhere",
  "version": "7.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "sidebar_action": {
    "default_title": "ChatGPT everywhere",
    "default_panel": "popup.html",
    "default_icon": "icon.png",
    "browser_style": false
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
